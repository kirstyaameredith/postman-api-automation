{
  "name": "postman-api-automation",
  "version": "1.0.0",
  "description": "Beginner API automation testing project using Postman and Newman",
  "scripts": {
    "test": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json",
    "test:individual": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --folder \"Individual Tests\"",
    "test:workflow": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --folder \"CRUD Workflow\"",
    "test:user-posts": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --folder \"User Posts Workflow\"",
    "test:comments": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --folder \"Comments Workflow\"",
    "test:report": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -r htmlextra --reporter-htmlextra-export reports/test-report.html",
    "test:workflow:report": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --folder \"CRUD Workflow\" -r htmlextra --reporter-htmlextra-export reports/workflow-report.html",
    "test:verbose": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json --verbose",
    "test:dev": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -e environments/dev.postman_environment.json -r cli,htmlextra --reporter-htmlextra-export reports/test-report-dev.html",
    "test:staging": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -e environments/staging.postman_environment.json -r cli,htmlextra --reporter-htmlextra-export reports/test-report-staging.html",
    "test:prod": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -e environments/prod.postman_environment.json -r cli,htmlextra --reporter-htmlextra-export reports/test-report-prod.html",
    "test:allure": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -r allure --reporter-allure-export allure-results",
    "test:custom": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -r ./reporters/custom-reporter.js",
    "test:comprehensive": "newman run collections/JSONPlaceholder_API_Tests.postman_collection.json -r cli,htmlextra,allure,./reporters/custom-reporter.js --reporter-htmlextra-export reports/test-report.html --reporter-allure-export allure-results",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "report:serve": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "postman",
    "newman",
    "api-testing",
    "automation",
    "CRUD",
    "workflow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "allure-commandline": "^2.36.0",
    "newman": "^6.0.0",
    "newman-reporter-allure": "^3.4.5",
    "newman-reporter-htmlextra": "^1.23.0"
  }
}
